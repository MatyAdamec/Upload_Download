@page
@model upload_download.Pages.UploadsModel
@{
    ViewData["Title"] = "Home page";
}

<h1>List of stored files</h1>

@if (Model.Files.Count > 0)
{
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model.Files)
            {
                <tr>
                    <td><img src="@Url.Page("Uploads", "Image", new { id = file.Id })" alt="Image" style="width:100px; height:auto;" /></td>
                    <td>@file.OriginalName</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-page-handler="download" asp-route-fileid="@file.Id">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no files uploaded yet.</p>
}